
@{
    ViewData["Title"] = "Something went wrong...";
}

<div class="main d-flex justify-content-center w-100">
		<main class="content d-flex p-0">
			<div class="container d-flex flex-column">
				<div class="row h-100">
					<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
						<div class="d-table-cell align-middle">

							<div class="text-center">
								<h1 class="display-1 fw-bold">Error :(</h1>
								<p class="h1">Error ID: @Model.ErrorId</p>
								<p class="h2 fw-normal mt-3 mb-4">We encountered an error that wasn't expected. Please try again and contact support if it does not resolve.</p>
								<a href="/app" class="btn btn-primary btn-lg">Return to dashboard</a>
							</div>

						</div>
					</div>
				</div>
			</div>
		</main>
	</div>