@model SignUpModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create Account";
}
<div class="main d-flex justify-content-center w-100">
    <main class="content d-flex p-0">
        <div class="container d-flex flex-column">
            <div class="row h-100">
                <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                    <div class="d-table-cell align-middle">

                        <div class="text-center mt-4">
                            <h1 class="h2"><img src="~/assets/dark_logo_transparent@4x-8.png" width="200" height="103" /></h1>
                            <p class="lead">
                                Create a new Strength Journal account
                            </p>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <div class="m-sm-4">
                                    @if (Model.Error != null)
                                    {
                                        <div class="alert alert-primary p-3" role="alert">
                                            @Model.Error
                                        </div>
                                    }
                                    <form method="POST">
                                        <div class="mb-3">
                                            <label class="form-label">Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "email", placeholder = "Enter your email" })
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Password</label>
                                            <input class="form-control form-control-lg" type="password" name="password" placeholder="Enter password" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Confirm Password</label>
                                            <input class="form-control form-control-lg" type="password" name="password2" placeholder="Enter password" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Country</label>
                                            <select class="form-select form-select-lg" name="countryCode">
                                                @foreach(var country in Model.CountryList)
                                                {
                                                    @if(country.Code == Model.SelectedCountryCode)
                                                    {
                                                        <option value="@country.Code" selected>@country.Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@country.Code">@country.Name</option>
                                                    }
                                                    
                                                }
                                            </select>
                                        </div>
                                        <div class="form-check align-items-center">
                                            @Html.CheckBoxFor(m => m.ConsentCEM)
                                            <label class="form-check-label text-small" for="consentCEM">I would like to receive promotional emails from Strength Journal</label>
                                        </div>
                                        <div class="text-center mt-3">
                                            <button type="submit" class="btn btn-lg btn-primary">Sign up</button>
                                        </div>
                                    </form>
                                    <div>
                                        <p class="text-center mt-3">
                                            Already have an account? <a href="/login">Sign in!</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
